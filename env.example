# Переменные окружения для AGB проекта
# ВАЖНО: Скопируйте этот файл в .env и измените значения для продакшена!

# База данных
POSTGRES_DB=agb_felix
POSTGRES_USER=felix_user
POSTGRES_PASSWORD=felix_password_secure_2024
DATABASE_URL=postgresql+asyncpg://felix_user:felix_password_secure_2024@postgres:5432/agb_felix

# Backend - FastAPI
SECRET_KEY=your-super-secret-key-change-this-in-production-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
PYTHONWARNINGS=ignore:Unverified HTTPS request

# Frontend - Next.js
NEXT_PUBLIC_API_URL=http://localhost/api
NODE_ENV=production

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

