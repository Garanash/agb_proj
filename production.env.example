# ПРОДАКШЕН КОНФИГУРАЦИЯ AGB ПРОЕКТА
# Скопируйте этот файл в .env на сервере и настройте значения

# База данных PostgreSQL
POSTGRES_DB=agb_felix_prod
POSTGRES_USER=felix_prod_user
POSTGRES_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE
DATABASE_URL=postgresql+asyncpg://felix_prod_user:YOUR_SECURE_DB_PASSWORD_HERE@postgres:5432/agb_felix_prod

# Backend - FastAPI
SECRET_KEY=YOUR_SUPER_SECRET_KEY_CHANGE_THIS_IN_PRODUCTION_2024_MIN_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
PYTHONWARNINGS=ignore:Unverified HTTPS request

# Frontend - Next.js
NEXT_PUBLIC_API_URL=http://localhost/api
NODE_ENV=production

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# Администратор по умолчанию (смените после первого запуска!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_PASSWORD_IMMEDIATELY
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_FIRST_NAME=Администратор
ADMIN_LAST_NAME=Системы

# Домен (для SSL)
DOMAIN=yourdomain.com

# SSL настройки
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
